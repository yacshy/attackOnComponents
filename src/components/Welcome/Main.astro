---
const componentCategories = [
	{
		icon: '',
		title: '基础组件',
		desc: '按钮、输入框、标签等最基本的UI元素，构成了所有复杂组件的基础。',
		url: '/Components/Basic'
	},
	{
		icon: '',
		title: '复合组件',
		desc: '由多个基础组件组合而成，如表单、卡片、导航栏等具有完整功能的单元。',
		url: '/Components/Compound'
	},
	{
		icon: '',
		title: '业务组件',
		desc: '针对特定业务场景封装的组件，如图表、地图集成等。',
		url: '/Components/Business'
	}
]
---

<!-- 主要内容 -->
<main class="pt-24 pb-16">
	<!-- 英雄区域 -->
	<section class="container mx-auto px-4 mb-24">
		<div class="mx-auto text-center">
			<h1
				class="text-[clamp(2rem,5vw,3.5rem)] font-light leading-tight mb-8 tracking-tight"
			>
				看似寻常最奇崛，成如容易却艰辛
			</h1>
			<p
				class="text-lg md:text-xl text-neutral-600 dark:text-neutral-400 mb-10 text-balance"
			>
				探索前端组件从简单到复杂，从原生到框架的演进历程，见证每一次技术突破背后的思考与实践。
			</p>
		</div>
	</section>

	<!-- 组件类型 -->
	<section id="components" class="container mx-auto px-4 mb-24">
		<h2 class="text-3xl font-light mb-12 text-center">组件类型</h2>

		<div
			class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto"
			id="component-categories"
		>
			<!-- 组件卡片1 -->
			{
				componentCategories.map(item => (
					<div
						data-category={item.url}
						class="bg-white border border-neutral-200 dark:border-neutral-200 rounded-xl p-6 hover:shadow-md hover:translate-y-[-2px] transition-all duration-[.3s] group cursor-pointer"
					>
						<div class="w-12 h-12 bg-neutral-100 dark:bg-neutral-200 rounded-lg flex items-center justify-center mb-4 group-hover:bg-accent/10 transition-colors">
							<i
								class="fa fa-window-maximize text-xl"
								aria-hidden="true"
							/>
						</div>
						<h3 class="text-xl font-medium mb-2">{item.title}</h3>
						<p class="text-neutral-600 dark:text-neutral-400">
							{item.desc}
						</p>
					</div>
				))
			}
		</div>
	</section>
</main>

<script>
	const componentsCategoriesDom = document.getElementById(
		'component-categories'
	)
	componentsCategoriesDom?.addEventListener('click', e => {
		let dom = e.target as HTMLElement
		while (dom) {
			if (dom.dataset.category) {
				window.location.href = dom.dataset.category
				break
			}
			if (dom.id === 'component-categories') break
			dom = dom.parentNode as HTMLElement
		}
	})
</script>
